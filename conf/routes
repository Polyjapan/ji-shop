
GET /users/login    controllers.UsersController.login
POST /users/login    controllers.UsersController.postLogin
GET /users/passwordReset    controllers.UsersController.passwordReset
GET /users/signup    controllers.UsersController.signup
POST /users/signup    controllers.UsersController.postSignup
GET /users/emailConfirm/:email/:code   controllers.UsersController.emailConfirm(email: String, code: String)

GET /assets/*file   controllers.Assets.versioned(path="/public", file: Asset)
